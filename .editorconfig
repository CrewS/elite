# editorconfig.org

root = true
[*]
indent_style = indent
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,handlebars,json}]
indent_size = 4

[*.{css,scss}]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[{node_modules,libs}/**]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
trim_trailing_whitespace = ignore
charset = ignore
